}

<h2>Evidencija ispita</h2>

<p>
    @Html.ActionLink("Unesi novi ispit", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BI)
        </th>
        <th>
