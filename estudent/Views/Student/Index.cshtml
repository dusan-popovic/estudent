@model IEnumerable<estudent.Models.Student>

@{
    ViewBag.Title = "Evidencija studenata";
}

<h2>Evidencija studenata</h2>

<p>
    @Html.ActionLink("Unesi novog studenta", "Create")
</p>

<table table-layout="fixed">
<tr>
    <td width="70%" >


    <table class="table" table-layout="fixed" width="100%">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grad)
            </th>
            <th></th>
        </tr>




        @foreach (estudent.Models.Student item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(Server.HtmlEncode(item.BI), "Index", new { id = (ViewBag.studentIsSelected && item.ID == ViewBag.infoBoxViewData.selectedStudent.ID) ? 0 : item.ID })
                    @*@Html.DisplayFor(modelItem => item.BI)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prezime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grad)
                </td>
                <td>
                    @Html.ActionLink("Izmeni", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Detalji", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Obriši", "Delete", new { id = item.ID })
                </td>
            </tr>


            

        }
    </table>


    </td>
    <td>
        &nbsp;
        <span>
            @if (ViewBag.studentIsSelected)//&& ViewBag.infoBoxViewData.selectedStudent == item
            {
                <span>
                    @*<div style="float:right; width:30%">*@
                @Html.Partial("_InfoBox", (estudent.Models.InfoBoxViewData)ViewBag.infoBoxViewData)
            </span>
            }
            </span>
</td>
</tr>
</table>



